<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353333"
    tools:context=".setup.FirstNavigationFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_button_first_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </com.google.android.material.button.MaterialButton>

    <TextView
        android:id="@+id/text_view_navigation_first"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:text="@string/navigation_first"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/next_button_first_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/navigation1"
        app:layout_constraintBottom_toTopOf="@+id/next_button_first_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_view_navigation_first"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/test_mode_switch_first_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@id/next_button_first_fragment"
        app:layout_constraintEnd_toStartOf="@id/next_button_first_fragment"
        app:layout_constraintTop_toTopOf="@id/next_button_first_fragment" />

    <TextView
        android:id="@+id/test_mode_text_view_first_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:gravity="center|right"
        android:text="@string/test_mode"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/test_mode_switch_first_fragment"
        app:layout_constraintEnd_toStartOf="@id/test_mode_switch_first_fragment"
        app:layout_constraintStart_toEndOf="@+id/text_view_navigation_first"
        app:layout_constraintTop_toTopOf="@id/test_mode_switch_first_fragment" />

</androidx.constraintlayout.widget.ConstraintLayout>